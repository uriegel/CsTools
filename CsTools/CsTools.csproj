<Project Sdk="Microsoft.NET.Sdk">

<PropertyGroup>
  <targetFramework>netstandard2.0</targetFramework>
	<ImplicitUsings>enable</ImplicitUsings>
	<Nullable>enable</Nullable>
	<Version>1.0.0</Version>
	<FileVersion>1.0.0.0</FileVersion>
	<AssemblyVersion>1.0.0.0</AssemblyVersion>
	<Authors>Uwe Riegel</Authors>
	<Company>Uwe Riegel</Company>		
	<Description>Tools for C#, mostly functional extensions for .NET Objects</Description>
    <PackageTags>CSharp;C#;.NET;Functional</PackageTags>
	<PackageLicenseUrl></PackageLicenseUrl>
	<PackageProjectUrl>https://github.com/uriegel/CsTools</PackageProjectUrl>
	<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
	<PackageLicenseFile>LICENSE</PackageLicenseFile>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>		    
	<LangVersion>10</LangVersion>
    <NoWarn>CS1591</NoWarn>    
</PropertyGroup>

<PropertyGroup>
	<DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
</PropertyGroup>

<ItemGroup>
	<None Include="..\README.md" Pack="true" PackagePath="\" />
	<None Include="..\LICENSE">
		<Pack>True</Pack>
		<PackagePath></PackagePath>
	</None>
</ItemGroup>

<ItemGroup>
  <PackageReference Include="LinqTools" Version="1.0.0" />
  <PackageReference Include="System.Collections.Immutable" Version="7.0.0" />
</ItemGroup>

</Project>
